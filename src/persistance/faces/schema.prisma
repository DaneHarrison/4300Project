generator client {
    provider             = "prisma-client-py"
    interface            = "sync"
    recursive_type_depth = 5
    output               = "./DB"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_A_URL")
}

model User {
    userID     Int     @id @default(autoincrement())
    userName   String
    userWeight Int[]
    userPhoto  String
}
