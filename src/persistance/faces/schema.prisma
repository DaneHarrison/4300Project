generator client {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
    output               = "./DB"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_A_URL")
}

model User {
    ID     Int     @id @default(autoincrement())
    Name   String
    Weight Int[]
    Photo  Bytes[]
}
