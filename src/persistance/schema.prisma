// missing authentication tables

generator client {
  provider = "prisma-client-js"
}

datasource db {
	provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id 			    Int		@id @default(autoincrement())
  eigenValue  Int
  name        String
  face        FaceVector?
}

model FaceVector {
  user    User	@relation(fields: [userID], references: [id], onDelete: Cascade)
  
  userID 	Int		@unique
  height  Int
  width   Int
  face    Int[]
}